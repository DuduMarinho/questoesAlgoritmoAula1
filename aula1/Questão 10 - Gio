#include int main()
{
float com, m2, m3, m4, m5;
printf("Digite o valor da compra: ");
scanf("%f", &com);

m2 = com / 2;
m3 = com / 3;
m4 = com / 4;
m5 = com / 5;

printf("Se você comprar à vista o valor será de: %.2f \n", com);
printf("Se você parcelar em 2 vezes o valor das parcelas será de: %.2f \n", m2);
printf("Se você parcelar em 3 vezes o valor das parcelas será de: %.2f \n", m3);
printf("Se você parcelar em 4 vezes o valor das parcelas será de: %.2f \n", m4);
printf("Se você parcelar em 5 vezes o valor das parcelas será de: %.2f \n", m5);
return 0;
}
