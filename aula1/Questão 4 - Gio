#include int main()
{
char pessoa;
int sal, ven, saln;

printf("Informe seu nome: ");
scanf("%s", &pessoa);
printf("Digite qual o seu salário: ");
scanf("%d", &sal);
printf("Informe o valor que você realizou em vendas neste mês: ");
scanf("%d", &ven);

saln = (ven * 0.15) + sal;

printf("Seu salário este mês será: %d \n", saln);

return 0;
}
